{
  "openapi": "3.0.0",
  "info": {
    "title": "Simple API with Path Parameter",
    "version": "1.0.0",
    "description": "A simple OpenAPI spec with a path parameter"
  },
  "paths": {
    "/resources/{id}": {
      "get": {
        "operationId": "getResourceById",
        "summary": "Get a resource by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Resource retrieved successfully"
          }
        }
      }
    }
  }
}