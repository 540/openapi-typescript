{
  "openapi": "3.0.0",
  "info": {
    "title": "API with Request Body",
    "version": "1.0.0",
    "description": "A simple OpenAPI spec with a request body and 201 response without body"
  },
  "paths": {
    "/resource": {
      "post": {
        "operationId": "createResourceWithBody",
        "summary": "Create a resource with request body",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Resource created successfully"
          }
        }
      }
    }
  }
}
