{
  "openapi": "3.0.0",
  "info": {
    "title": "Simple API with Query Parameter",
    "version": "1.0.0",
    "description": "A simple OpenAPI spec with a query parameter"
  },
  "paths": {
    "/resources": {
      "get": {
        "operationId": "listResources",
        "summary": "List resources with optional filtering",
        "parameters": [
          {
            "name": "filter",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Resources retrieved successfully"
          }
        }
      }
    }
  }
}